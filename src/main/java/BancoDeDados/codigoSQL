create schema bibliotecapublica;
use bibliotecapublica;
create table cliente(
	nome varchar(255),
    email varchar(255),
    senha varchar(255),
    cpf varchar(11),
    primary key(cpf)
);

create table livro(
	id_livro int,
    nome varchar(255),
    editora varchar(255),
    autor varchar(255),
    ano_publicacao int,
    avaliacao double,
    status_emprestimo boolean,
    cpf_cliente_ocupante varchar(11),
    primary key(id_livro)
);