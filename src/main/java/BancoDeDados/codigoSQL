create schema bibliotecapublica;
use bibliotecapublica;
create table cliente(
	nome varchar(255),
    email varchar(255),
    senha varchar(255),
    cpf varchar(11),
    primary key(cpf)
);

create table livro(
	id_livro int,
    nome varchar(255),
    editora varchar(255),
    autor varchar(255),
    ano_publicacao int,
    avaliacao double,
    status_emprestimo boolean,
    primary key(id_livro)
);

create table emprestimo(
	id int,
	data_inicial DATE,
    vencimento DATE,
    devolvido boolean,
    cpf_ocupante varchar(11),
    primary key (id)
);

create table funcionario(
	nome varchar(255),
    cpf varchar(11),
    login varchar(255),
    senha varchar(255),
    e_adm boolean,
    primary key (cpf)
);